<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="marcoRedondeado">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    
    <style name="fuenteGeneral">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="fuenteGeneralBlanco">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="fuenteGeneralPrimario">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/color.primario</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="fuenteSuplente">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/gris</item>
        <item name="android:textSize">@dimen/_16sdp</item>
    </style>

    <style name="fuenteSuplenteBlancaMin">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <style name="fuenteSuplenteNegraMin">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <style name="fuenteSuplenteNegraMinBold">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ErrorTextStyle" parent="TextAppearance.AppCompat.Caption">
        <item name="android:layout_margin">@dimen/_60sdp</item>
    </style>

    <!-- Define el estilo para el Spinner -->
    <style name="SpinnerPers" parent="Widget.AppCompat.Spinner">
        <!-- Fondo del Spinner -->
        <item name="android:background">@drawable/borde_receta_post</item>
        <!-- Color del texto del Spinner -->
        <item name="android:textColor">#000000</item>
        <!-- Tamaño del texto -->
        <item name="android:textSize">16sp</item>
        <!-- Padding -->
        <item name="android:padding">8dp</item>
    </style>

    <!-- Define el estilo para los ítems del Spinner -->
    <style name="SpinnerDropDownItemStyle" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">8dp</item>
    </style>

</resources>